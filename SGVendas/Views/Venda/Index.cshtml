@{
    ViewData["Title"] = "Venda";
}

<h2>Venda</h2>

<!-- Cabeçalho -->
<div class="row mb-3">
    <div class="col-md-4">
        <label>Vendedor</label>
        <select id="vendedor" class="form-control"></select>
    </div>

    <div class="col-md-4">
        <label>Cliente</label>
        <select id="cliente" class="form-control"></select>
    </div>

    <div class="col-md-4">
        <label>Data</label>
        <input type="date" id="dataVenda" class="form-control" />
    </div>
</div>

<hr />

<!-- Inclusão de produtos -->
<div class="row mb-3">
    <div class="col-md-4">
        <label>Produto</label>
        <input type="text" id="produto" class="form-control" />
    </div>

    <div class="col-md-2">
        <label>Quantidade</label>
        <input type="number" id="quantidade" class="form-control" />
    </div>

    <div class="col-md-2">
        <label>Preço</label>
        <input type="number" id="preco" class="form-control" />
    </div>

    <div class="col-md-2">
        <label>&nbsp;</label>
        <button id="btnAdicionar" class="btn btn-success w-100">
            Adicionar
        </button>
    </div>
</div>

<!-- Grid -->
<table class="table table-bordered" id="gridItens">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Qtd</th>
            <th>Preço</th>
            <th>Total</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <!-- itens via jQuery -->
    </tbody>
</table>

<!-- Totais -->
<div class="row">
    <div class="col-md-4 offset-md-8">
        <label>Total da Venda</label>
        <input type="text" id="totalVenda" class="form-control" readonly />
    </div>
</div>

<hr />

<button class="btn btn-primary" id="btnFinalizar">
    Finalizar Venda
</button>
